{% extends 'base.html.twig' %}

{% block title %}All News{% endblock %}

{% block body %}
    {% for newsItem in newsItems %}
        <section class="news-item">
            <h1>
                <a href="{{ path('viewNewsItem', { 'urlName': newsItem.urlName }) }}">
                    {{ newsItem.title }}
                </a>
            </h1>
            <p>{{ newsItem.preview }}</p>
        </section>
    {% endfor %}

    <ul class="pagination">
        {% if currentPage == 1 %}
            <li>«</li>
        {% else %}
            <li><a href="{{ path('newsList', { 'page': currentPage - 1 }) }}">«</a></li>
        {% endif %}
        
        {% for page in 1..pageCount %}
            {% if page == currentPage %}
                <li>{{ page }}</li>
            {% else %}
                <li><a href="{{ path('newsList', { 'page': page }) }}">{{ page }}</a></li>
            {% endif %}
        {% endfor %}
        
        {% if currentPage == pageCount %}
            <li>»</li>
        {% else %}
            <li><a href="{{ path('newsList', { 'page': currentPage + 1 }) }}">»</a></li>
        {% endif %}
    </ul>
{% endblock %}
