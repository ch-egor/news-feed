{% extends 'base.html.twig' %}

{% block title %}Edit News Item{% endblock %}

{% block body %}
    <h1>Edit News Item</h1>
    <hr>
    
    {{ form_start(form, { 'attr': { 'class': 'edit-news-form' } }) }}
    <div class="form-item">
        {{ form_label(form.title, 'Title') }}
        {{ form_errors(form.title) }}
        {{ form_widget(form.title, { 'attr': { 'class': 'control' } }) }}
    </div>
    <div class="form-item">
        {{ form_label(form.urlName, 'URL Name') }}
        {{ form_errors(form.urlName) }}
        {{ form_widget(form.urlName, { 'attr': { 'class': 'control' } }) }}
    </div>
    <div class="form-item">
        {{ form_label(form.preview, 'Preview') }}
        {{ form_errors(form.preview) }}
        {{ form_widget(form.preview, { 'attr': { 'class': 'control' } }) }}
    </div>
    <div class="form-item">
        {{ form_label(form.content, 'Content') }}
        {{ form_errors(form.content) }}
        {{ form_widget(form.content, { 'attr': { 'class': 'control control-news-content' } }) }}
    </div>
    {{ form_widget(form.save, { 'attr': { 'class': 'button' } }) }}
    <a class="button right" href="{{ path('adminNewsList') }}">Back to admin page</a>
    {{ form_end(form) }}
{% endblock %}
